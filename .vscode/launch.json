{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Lex",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lox-rs",
                    "--package=lox-rs",
                ],
            },
            "args": [
                "lex",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Print AST",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lox-rs",
                    "--package=lox-rs",
                ],
            },
            "args": [
                "print-ast",
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        }
    ]
}